<!--javascript.wxml-->
<view class="index">
    <view class="nav">
        <nav-swiper></nav-swiper>
    </view>
    <view class="content" wx:if="{{contentList.length}}">
        <view class="content-title">
            <view class="icon"></view>
            进阶模块
        </view>
        <view class="content-item">
            <view
                class="item"
                wx:for="{{contentList}}"
                wx:key="index"
                wx:for-item="item"
                bind:tap="onCellClick"
                data-item="{{item}}"
            >
                <view class="tag" wx:if="{{item.disabled}}">建设中</view>
                <view class="title">
					<t-icon name="{{'letters-' + item.icon}}" size="48rpx"/>
                    <text decode="{{true}}">&nbsp;&nbsp;</text>
                    {{item.title}}
                </view>
                <view class="motto">{{item.motto}}</view>
                <t-image
					class="img"
					width="128rpx"
                    shape="round"
					mode="widthFix"
                    wx:if="{{item.img}}"
                    src="{{item.img}}"
                />
            </view>
        </view>
		<view class="content-title">
            <view class="icon"></view>
            复习纲要
        </view>
		<t-cell-group theme="card">
			<t-cell title="进阶图谱" hover arrow bind:tap="onTipClick" data-idx="{{0}}"/>
			<t-cell title="复习纲要" hover arrow bind:tap="onTipClick" data-idx="{{1}}"/>
			<t-cell title="学习进行时" hover arrow bind:tap="onTipClick" data-idx="{{2}}"/>
			<t-cell title="面试要点" hover arrow bind:tap="onTipClick" data-idx="{{3}}"/>
			<t-cell title="资源下载" hover arrow bind:tap="onTipClick" data-idx="{{4}}"/>
		</t-cell-group>
    </view>
	<view class="group" wx:else>
		<view class="group-title">
			<t-skeleton animation="flashed" rowCol="{{[{ width: '50%', height: '64rpx' }]}}" loading></t-skeleton>
		</view>
		<view class="group-item">
			<t-skeleton
				class="group-item-skelton"
				wx:for="{{11}}"
				animation="flashed"
				rowCol="{{rowCol}}"
				loading
			></t-skeleton>
		</view>
	</view>
	<t-notice-bar
		class="notice"
		visible="{{noticeContent}}"
		marquee="{{marquee}}"
		prefixIcon="sound"
		content="{{noticeContent}}"
	></t-notice-bar>
</view>
