<!--list.wxml-->
<view class="list">
    <van-skeleton row="23" loading="{{ isLoading }}">
        <van-cell-group
            wx:for="{{list}}"
            wx:key="index"
            wx:for-item="item"
            border="{{false}}"
            wx:for-index="index"
            title="{{item.name || item}}"
        >
            <van-cell
                title="{{child.name || (child === 'index' ? '概要' : child)}}"
                title-width="484rpx"
                class="cell"
                wx:for="{{item.children}}"
                wx:key="idx"
                wx:for-item="child"
                wx:for-index="idx"
                is-link
                bind:tap="onCellClick"
                data-cell="{{child}}"
                use-label-slot
            >
                <van-button
                    custom-style="width: 64rpx;"
                    hairline
                    catch:tap="onCodeCheck"
                    data-cell="{{child}}"
                    data-index="{{idx}}"
                    round
                    type="primary"
                    size="mini"
                    wx:if="{{options.url === 'threejs_case'}}"
                >源码</van-button>
            </van-cell>
        </van-cell-group>
    </van-skeleton>
    <van-popup
        show="{{ show }}"
        closeable
        round
        close-icon="close"
        position="bottom"
        custom-style="height: 70%"
        bind:close="onClose"
    >
        <view class="pop-title">{{title}}</view>
        <van-divider />
        <view class="pop-tip">* 可点击代码区域复制粘贴到html文档中查看案例</view>
        <view class="pop-content" bind:tap="onContentClick">{{content}}</view>
    </van-popup>
    <van-loading custom-class="loading" wx:if="{{isLoading}}" type="spinner" color="#1989fa" />
</view>
