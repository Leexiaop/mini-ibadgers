/**index.wxss**/
.index {
    width: 100%;
    box-sizing: border-box;
    padding-bottom: 64rpx;
    background-color: rgb(206, 235, 231);
}
.index > .content {
    padding: 32rpx 32rpx 16rpx 32rpx;
    box-sizing: border-box;
    column-count: 2;
    column-gap: 32rpx;
}
.index > .content > .item {
    display: inline-block;
    width: 100%;
    margin-bottom: 24rpx;
    background-color: #fff;
    padding: 16rpx;
    box-sizing: border-box;
    border-radius: 24rpx;
    break-inside: avoid;
    position: relative;
    overflow: hidden;
}
.index > .notice {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
}

.index > .content > .item > .tag {
    position: absolute;
    background-color: #e4393c;
    top: 0;
    right: 0;
    color: #fff;
    border-bottom-left-radius: 24rpx;
    padding: 8rpx;
    font-size: 14rpx;
}
.index > .content > .item > .title {
    color: #666;
    margin-bottom: 8rpx;
}
.index > .content > .item > .motto {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 8rpx;
}
.index > .content > .item > .img {
    margin: 0 auto;
}
.index .ad {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
.index .ad > .ad-item {
    width: 100%;
    height: calc(100vh - 228rpx);
    position: relative;
}
.index .ad > .ad-item > .left {
    display: flex;
    align-items: center;
    top: 102rpx;
    left: 20rpx;
    position: absolute;
    z-index: 100000000;
}
    .index .ad > .ad-item > .left > .left-content {
    width: 130rpx;
    height: 36rpx;
    border: 1px solid rgba(0, 0, 0, 0.1);
    padding: 12rpx 20rpx;
    display: flex;
    border-radius: 36rpx;
    background-color: rgb(255, 255, 255, 0.6);
}
.index .ad > .ad-item > .left .count {
    color: #fff;
}
.index .ad > .ad-item > .left > .left-content > view {
    width: 100%;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    font-size: 16rpx;
}
.index .ad > .ad-item > .left > .left-content > view:first-child {
    border-right: 1px solid rgba(252, 252, 252, 0.3);
}
.index .ad > .ad-item > .ad-content {
    border-radius: 24rpx;
    display: flex;
    align-items: baseline;
    justify-content: center;
}
.index .ad > .ad-item > .ad-tip {
    display: flex;
}
.index .ad > .ad-logo {
    width: 100%;
    height: 228rpx;
    background-color: rgb(231, 204, 145, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
    font-size: large;
}

