/**index.wxss**/
.index {
    width: 100%;
    box-sizing: border-box;
    padding-bottom: 64rpx;
    background-color: rgb(206, 235, 231);
}
.index > .content {
    padding: 32rpx 32rpx 16rpx 32rpx;
    box-sizing: border-box;
    column-count: 2;
    column-gap: 32rpx;
}
.index > .content > .item {
    display: inline-block;
    width: 100%;
    margin-bottom: 24rpx;
    background-color: #fff;
    padding: 16rpx;
    box-sizing: border-box;
    border-radius: 24rpx;
    break-inside: avoid;
    position: relative;
    overflow: hidden;
}
.index > .notice {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
}

.index > .content > .item > .tag {
    position: absolute;
    background-color: #e4393c;
    top: 0;
    right: 0;
    color: #fff;
    border-bottom-left-radius: 24rpx;
    padding: 8rpx;
    font-size: 14rpx;
}
.index > .content > .item > .title {
    color: #666;
    margin-bottom: 8rpx;
}
.index > .content > .item > .motto {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 8rpx;
}
.index > .content > .item > .img {
    margin: 0 auto;
}
