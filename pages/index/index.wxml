<!--index.wxml-->
<view class="index">
    <nav-swiper height="480"></nav-swiper>
    <view class="content">
        <view
            class="item"
            wx:for="{{contentList}}"
            wx:key="index"
            wx:for-item="item"
            bind:tap="onCellClick"
            data-item="{{item}}"
        >
            <view class="tag" wx:if="{{!item.disabled}}">开放中</view>
            <view class="title">
                <van-icon name="{{item.icon}}" />
                <text decode="{{true}}">&nbsp;&nbsp;</text>
                {{item.title}}
            </view>
            <view class="motto">{{item.motto}}</view>
            <van-image
                class="img"
                fit="widthFix"
                wx:if="{{item.img}}"
                width="128rpx"
                src="{{item.img}}"
            />
        </view>
    </view>
    <van-notice-bar
        class="notice"
        left-icon="volume-o"
        text="走过多少岁月才发现，敲的每一行代码还不是最优秀，还需要努力加油，So~~,拼搏到无能为力，坚持到感动自己。"
    />
</view>
