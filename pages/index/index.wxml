<!--index.wxml-->
<view class="index">
    <view class="nav">
        <swiper indicatorDots autoplay interval="{{2000}}" duration="{{500}}">
            <block wx:for="{{swiperList}}" wx:key="*this">
                <swiper-item>
                    <van-image
                        fit="widthFix"
                        width="100%"
                        src="{{item}}"
                    />
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="content">
        <view
            class="item"
            wx:for="{{contentList}}"
            wx:key="index"
            bind:tap="onCellClick"
            data-index="{{index}}"
        >
            <view class="title"><van-icon name="{{item.icon}}" /><text decode="{{true}}">&nbsp;&nbsp;</text>{{item.title}}</view>
            <view class="motto">{{item.motto}}</view>
            <van-image
                class="img"
                wx:if="{{item.img}}"
                width="128rpx"
                height="128rpx"
                src="{{item.img}}"
            />
        </view>
    </view>
    <van-notice-bar
        class="notice"
        left-icon="volume-o"
        text="在代码阅读过程中人们说脏话的频率是衡量代码质量的唯一标准。"
    />
    <!-- <view class="ad">dadas</view> -->
</view>
