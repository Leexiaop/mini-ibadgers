<!--pages/index/index.wxml-->
<view wx:if="{{!loading}}" class="index">
    <nav-swiper navigation="{{navigation}}" height="480" wx:if="{{navList.length}}" list="{{navList}}"></nav-swiper>
    <t-grid column="{{5}}">
        <t-grid-item text="进阶图谱" icon="education" bindclick="onTipClick" data-index="{{0}}" />
        <t-grid-item text="复习纲要" icon="git-repository-commits" bindclick="onTipClick" data-index="{{1}}" />
        <t-grid-item text="学习进行时" icon="system-regulation" bindclick="onTipClick" data-index="{{2}}" />
        <t-grid-item text="面试要点" icon="list" bindclick="onTipClick" data-index="{{3}}" />
        <t-grid-item text="资源下载" icon="castle" bindclick="onTipClick" data-index="{{4}}" />
    </t-grid>
    <view class="content" wx:if="{{list.length}}">
        <view class="content-title">
            <view class="icon"></view>
            必看八股文
        </view>
        <view class="content-item">
            <view class="item" wx:for="{{list}}" wx:key="index" wx:for-item="item" bind:tap="onCellClick" data-item="{{item}}">
                <view class="tag" wx:if="{{item.disabled}}">建设中</view>
                <view class="title">
                    <t-icon name="{{'letters-' + item.icon}}" size="48rpx" />
                    <text decode="{{true}}">&nbsp;&nbsp;</text>
                    {{item.title}}
                </view>
                <view class="motto">{{item.motto}}</view>
                <t-image class="img" width="128rpx" shape="round" mode="widthFix" wx:if="{{item.img}}" src="{{item.img}}" />
            </view>
        </view>
    </view>
</view>
<view wx:else class="group">
    <t-skeleton rowCol="{{rowCol1}}" animation="flashed" loading></t-skeleton>
    <view class="group-content">
        <view class="group-content-item" wx:for="{{5}}">
            <t-skeleton animation="flashed" rowCol="{{rowCol2}}" loading></t-skeleton>
        </view>
    </view>
    <view class="group-item">
        <t-skeleton animation="flashed" rowCol="{{[{width: '50%', height: '48rpx'}]}}" loading></t-skeleton>
        <text decode="{{true}}">&nbsp;</text>
        <view class="tip">
            <t-skeleton
                wx:for="{{6}}"
                style="margin-bottom: 24rpx;"
                animation="flashed"
                rowCol="{{[{width: '320rpx', height: '343rpx'}]}}"
                loading
            ></t-skeleton>
        </view>
    </view>
</view>
