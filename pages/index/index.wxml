<!--index.wxml-->
<view class="index">
    <view class="nav">
        <swiper indicatorDots autoplay interval="{{2000}}" duration="{{500}}">
            <block wx:for="{{swiperList}}" wx:key="*this">
                <swiper-item>
                    <van-image
                        fit="widthFix"
                        width="100%"
                        src="{{item}}"
                    />
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="content">
        <view
            class="item"
            wx:for="{{contentList}}"
            wx:key="index"
            wx:for-item="item"
            bind:tap="onCellClick"
            data-item="{{item}}"
        >
            <view class="tag" wx:if="{{!item.disabled}}">开放中</view>
            <view class="title">
                <van-icon name="{{item.icon}}" />
                <text decode="{{true}}">&nbsp;&nbsp;</text>
                {{item.title}}
            </view>
            <view class="motto">{{item.motto}}</view>
            <van-image
                class="img"
                fit="widthFix"
                wx:if="{{item.img}}"
                width="128rpx"
                src="{{item.img}}"
            />
        </view>
    </view>
    <van-notice-bar
        class="notice"
        left-icon="volume-o"
        text="走过多少岁月才发现，敲的每一行代码还不是最优秀，还需要努力加油，拼搏到无能为力，坚持到感动自己。"
    />
    <van-transition show="{{ timeData.seconds > 0 && isAdShow }}" custom-class="block" name="fade">
        <view class="ad">
            <view class="ad-item">
                <view class="left">
                    <view class="left-content">
                        <view type="default">广告</view>
                        <view type="default" bind:tap="onAdClose">跳过</view>
                    </view>
                    <text decode>&nbsp;&nbsp;&nbsp;</text>
                    <van-count-down use-slot time="{{ 5000 }}" bind:change="onTimeChange">
                        <text class="count">{{ timeData.seconds }}s</text>
                    </van-count-down>
                </view>
                <view class="ad-content">
                    <van-image
                        class="ad-img"
                        fit="widthFix"
                        width="100vw"
                        src="https://leexiaop.github.io/static/mini/img/ad.png"
                    />
                </view>
                <view class="ad-tip">
                    <van-image
                        class="ad-img"
                        fit="widthFix"
                        width="25vw"
                        src="https://leexiaop.github.io/static/mini/img/ad_1.jpg"
                    />
                    <van-image
                        class="ad-img"
                        fit="widthFix"
                        width="25vw"
                        src="https://leexiaop.github.io/static/mini/img/ad_2.jpg"
                    />
                    <van-image
                        class="ad-img"
                        fit="widthFix"
                        width="25vw"
                        src="https://leexiaop.github.io/static/mini/img/ad_3.jpg"
                    />
                    <van-image
                        class="ad-img"
                        fit="widthFix"
                        width="25vw"
                        src="https://leexiaop.github.io/static/mini/img/ad_4.jpg"
                    />
                </view>
            </view>
            <view class="ad-logo">
                <van-image
                    round
                    width="128rpx"
                    height="128rpx"
                    src="https://leexiaop.github.io/static/ibadgers/logo.png"
                />
                <text decode="{{true}}">&nbsp;&nbsp;&nbsp;Ibadgers前端练功房</text>
            </view>
        </view>
    </van-transition>
</view>
