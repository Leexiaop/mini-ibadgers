/* deppackage/ad/ad.wxss */
.molar {
	width: 100%;
	min-height: 100vh;
	box-sizing: border-box;
	padding: 16rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.content {
	width: 100%;
	min-height: calc(100vh - 500rpx);
}
.content > .content-item {
	width: 100%;
}
.content > .content-item > .title {
	font-size: 32rpx;
	font-weight: 600;
	color: #666;
	margin: 64rpx 0 24rpx 0;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding-bottom: 16rpx;
	border-bottom: 1rpx solid #d8d8d8;
}
.content > .content-item > .content-squre {
	display: flex;
	flex-wrap: nowrap;
	overflow-x: scroll;
	margin-right: -16rpx;
}
.content > .content-item > .content-squre > .img {
	border-radius: 8rpx;
	margin-right: 16rpx;
}
.content > .content-item > .content-small {
	display: flex;
	border-radius: 8rpx;
	overflow: hidden;
}
.content > .content-item > .content-small > .content-small-left {
	width: 50%;
}
.content > .content-item > .content-small > .content-small-right {
	width: 50%;
	display: flex;
	flex-wrap: wrap;
}
/* .content > .content-item > .content-small > .content-small-right > .img {
	border: 1rpx solid #ffffff;
} */
.content > .content-item > .content-list {
	display: flex;
	flex-wrap: nowrap;
	overflow-x: scroll;
	margin-right: -16rpx;
}
.content > .content-item > .content-list > .img {
	border-radius: 16rpx;
	margin-right: 16rpx;
}
