/* pages/guitar/guitar.wxss */
.guitar {
	width: 100%;
	box-sizing: border-box;
	padding: 32rpx;
}
.guitar > .main {
	width: 100%;
	margin-top: 24rpx;
}
.guitar > .main > .title {
	width: 100%;
	display: flex;
	justify-content: space-between;
}
.guitar > .main > .title > .left {
	width: 70%;
	display: flex;
	color: #666;
	font-size: 28rpx;
}
.guitar > .main > .title > .left view {
	width: 128rpx;
	display: flex;
	padding-bottom: 4rpx;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.guitar > .main > .title > .left view > .line {
	width: 64rpx;
	height: 0;
	border-bottom: 1rpx solid #fff;
}
.guitar > .main > .title > .right {
	font-size: 26rpx;
	color: #999;
}
.guitar > .main > .swiper {
	border-radius: 24rpx;
	overflow: hidden;
	margin-top: 24rpx;
	padding: 24rpx;
}
.guitar > .main > .swiper .swiper-item {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.guitar > .main > .swiper .swiper-item .left {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.guitar > .main > .swiper .swiper-item .left > .swiper-item-guitar {
	display: flex;
	align-items: center;
	margin-bottom: 24rpx;
	font-size: 28rpx;
	color: #666;
}
.guitar > .main > .swiper .swiper-item .left > .swiper-item-guitar > .author {
	font-size: 22rpx;
	color: #999;
}
.guitar > .main > .swiper .swiper-item .left > .swiper-item-guitar:last-child {
	margin-bottom: 0;
}
.guitar > .singer {
	width: 100%;
	margin-top: 24rpx;
}
.guitar > .singer > .title {
	color: #666;
	font-size: 28rpx;
	margin-bottom: 24rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.guitar > .singer > .content {
	width: 100%;
	overflow: auto;
	white-space: nowrap;
	padding-right: -24rpx;
}
.guitar > .singer > .content > .item {
	display: inline-block;
	width: 220rpx;
	height: 220rpx;
	margin-right: 24rpx;
	border-radius: 16rpx;
	background-color: red;
}