.list {
	width: 100%;
	display: flex;
	flex-direction: column;
	min-height: 90vh;
	box-sizing: border-box;
}
.list > .content {
	flex: 1;
}
.block {
	width: 100vw;
	background: #fff;
	border-top-left-radius: 16rpx;
	border-top-right-radius: 16rpx;
}
.group {
	padding: 24rpx;
}
.group-content {
	margin-bottom: 24rpx;
}
.divider {
	padding: 36rpx 0;
}