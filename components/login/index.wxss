/* components/login/login.wxss */
.login {
	width: 622rpx;
}
.login > .header {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 24rpx 0;
}

.login > .content {
	padding: 32rpx;
}
.login > .content > .item {
	display: flex;
	align-items: center;
	margin-bottom: 24rpx;
}
.login > .content > .info {
	font-size: 26rpx;
	color: #999;
}
.login > .content > .info > text {
	display: block;
	width: 80rpx;
	height: 80rpx;
	text-align: center;
	font-size: 80rpx;
}
.login > .foot {
	width: 100%;
	display: flex;
}
.login > .foot > view {
	width: 100%;
	height: 72rpx;
	display: flex;
	justify-content: center;
}
.login > .foot .btn {
	border: none;
	border-radius: 0;
	width: 100%;
	height: 100%;
}
.login > .foot .btn:active {
	background-color: transparent;
}