/* deppackage/ad/ad.wxss */
.ad {
	width: 100%;
	box-sizing: border-box;
	padding: 16rpx;
}
.content {
	width: 100%;
}
.content > .content-item {
	width: 100%;
}
.content > .content-item > .title {
	font-size: 32rpx;
	font-weight: 600;
	color: #666;
	margin: 64rpx 0 24rpx 0;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding-bottom: 16rpx;
	border-bottom: 1rpx solid #d8d8d8;
}
.content > .content-item > .content-small {
	display: flex;
	flex-wrap: nowrap;
	overflow-x: scroll;
	margin-right: -16rpx;
}
.content > .content-item > .content-small > .img {
	border-radius: 8rpx;
	margin-right: 16rpx;
}
.content > .content-item > .content-list {
	display: flex;
	flex-wrap: nowrap;
	overflow-x: scroll;
	margin-right: -16rpx;
}
.content > .content-item > .content-list > .img {
	border-radius: 16rpx;
	margin-right: 16rpx;
}
