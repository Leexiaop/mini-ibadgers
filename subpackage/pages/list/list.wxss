.list {
    width: 100%;
    box-sizing: border-box;
}
.t-cell__title {
	width: 70%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.block {
	width: 100vw;
	background: #fff;
	border-top-left-radius: 16rpx;
	border-top-right-radius: 16rpx;
}
  
.wrapper {
	margin: 32rpx;
	display: block;
}
  
.header {
	display: flex;
	align-items: center;
	height: 96rpx;
}
  
.title {
	flex: 1;
	text-align: center;
	font-size: 32rpx;
}
.group {
	padding: 24rpx;
}
.group-content {
	margin-bottom: 24rpx;
}

.btn {
	font-size: 32rpx;
	padding: 32rpx;
}

.btn--cancel {
	color: rgba(0, 0, 0, .6);
}

.btn--confirm {
	color: #0052d9;
}
.pop-content {
	width: 100%;
	height: 60vh;
	overflow: auto;
	padding: 24rpx;
}
.pop-tip {
	color: red;
	font-size: 26rpx;
	margin-bottom: 24rpx;
}
.loading {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, 50%);
}